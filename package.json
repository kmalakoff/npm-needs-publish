{
  "name": "npm-needs-publish",
  "version": "0.1.0",
  "description": "Smart publish detection for npm packages - semantic package.json comparison with semver-aware dependency analysis",
  "keywords": [
    "npm",
    "publish",
    "detection",
    "semver",
    "semantic",
    "version",
    "comparison",
    "package.json",
    "dependencies"
  ],
  "homepage": "https://github.com/kmalakoff/npm-needs-publish#readme",
  "bugs": {
    "url": "https://github.com/kmalakoff/npm-needs-publish/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmalakoff/npm-needs-publish.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff.info@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "source": "src/index.ts",
  "types": "./dist/esm/index.d.ts",
  "bin": {
    "nnp": "bin/cli.js",
    "npm-needs-publish": "bin/cli.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsds build",
    "check": "node bin/cli.js",
    "format": "tsds format",
    "prepublishOnly": "tsds validate",
    "test": "npm run test:unit && npm run test:integration",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "test:integration": "tsds test:node --no-timeouts 'test/integration/**/*.test.ts'",
    "test:unit": "tsds test:node --no-timeouts 'test/unit/**/*.test.ts'",
    "version": "tsds version"
  },
  "dependencies": {
    "@npmcli/arborist": "*",
    "fs-copy-compat": "*",
    "fs-remove-compat": "*",
    "mkdirp-classic": "*",
    "npm-package-arg": "*",
    "pacote": "*",
    "semver": "*",
    "tar": "*",
    "temp-suffix": "*",
    "tsds-lib": "*"
  },
  "devDependencies": {
    "@types/mocha": "*",
    "@types/node": "*",
    "@types/pacote": "^11.1.8",
    "@types/semver": "*",
    "@types/tar": "*",
    "module-link-unlink": "*",
    "node-version-use": "*",
    "os-shim": "*",
    "queue-cb": "*",
    "resolve": "*",
    "short-hash": "*",
    "ts-dev-stack": "*",
    "tsds-config": "*",
    "tsds-lib-test": "*"
  },
  "engines": {
    "node": ">=16"
  }
}
